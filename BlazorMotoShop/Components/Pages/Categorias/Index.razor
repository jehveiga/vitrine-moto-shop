@page "/categorias"
@rendermode @(new InteractiveServerRenderMode(prerender: false))

<h3 class="text-info text-center">Lista de Categorias</h3>

<a href="categorias/criar" class="btn btn-primary">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square-fill me-1 mb-1" viewBox="0 0 16 16">
        <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm6.5 4.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3a.5.5 0 0 1 1 0" />
    </svg>
    Nova Categoria
</a>

@if (!Categorias.Any())
{
    <SpinnerLoad></SpinnerLoad>
}
else
{
    <table class="table table-hover mt-3">
        <thead>
            <tr class="table-info">
                <th scope="col">Id</th>
                <th class="text-center" scope="col">Nome</th>
                <th class="text-end" scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var categoria in Categorias)
            {
                <tr class="table-light">
                    <td>@categoria.Id</td>
                    <td class="text-center">
                        <a class="btn btn-link" href="/categorias/@categoria.Id">
                            @categoria.Nome
                        </a> 
                    </td>
                    <td class="text-end">
                        <a href="/categorias/editar/@categoria.Id" class="btn btn-info">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                            </svg>
                        </a>
                        <a href="/categorias/excluir/@categoria.Id" class="btn btn-danger">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5" />
                            </svg>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}


@code {
    [Inject]
    public ICategoriaRepository? CategoriaRepository { get; set; }

    protected IEnumerable<Categoria> Categorias { get; set; } = Enumerable.Empty<Categoria>();

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(3000);

        Categorias = await CategoriaRepository.ObterCategorias();
    }
}
